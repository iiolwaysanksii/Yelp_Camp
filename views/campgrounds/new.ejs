<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Create a new campground</h1>
    <div style="width: 30%; margin: 40px auto;">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="Enter Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="Enter Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" placeholder="Enter price per night" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" placeholder="Provide details about campground">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back!</a>
    </div>
</div>

<%- include("../partials/footer") %> 